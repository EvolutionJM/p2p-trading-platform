# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/p2p-trading

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d

# Bybit API
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=false

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# KYC Provider (Sumsub/Onfido)
KYC_PROVIDER=sumsub
KYC_API_KEY=your_kyc_api_key
KYC_API_SECRET=your_kyc_api_secret
KYC_WEBHOOK_SECRET=your_webhook_secret

# Email Service (for notifications and verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@p2ptrading.com

# For Gmail: Use App Password (not regular password)
# 1. Enable 2FA on your Google account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate app password for "Mail"
# 4. Use that password here

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# WebSocket
WS_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
